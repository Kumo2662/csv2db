<h1>CSV INSERT</h1>

<%= form_with url: csv_insert_property_index_path, local: true, html: { multipart: true } do |form| %>
  <div>
    <%= form.file_field :csv_file %>
  </div>
  <div>
    <%= form.submit 'upload' %>
  </div>
<% end %>

<% if flash[:notice] %>
  <p style="color: green;"> <%= flash[:notice] %> </p>
<% end %>

<% if flash[:alert] %>
  <div style="color: red; background-color: #ffe6e6; padding: 10px; border: 1px solid #ff9999; border-radius: 4px; margin: 10px 0;">
    <%= raw flash[:alert] %>
  </div>
<% end %>

<% if flash[:alert_messages] %>
  <div style="color: red; background-color: #ffe6e6; padding: 10px; border: 1px solid #ff9999; border-radius: 4px; margin: 10px 0;">
    <% flash[:alert_messages].each do |message| %>
      <div><%= message %></div>
    <% end %>
    <% if flash[:undisplayed_errors] %>
      <div style="font-weight: bold; margin-top: 5px;">
        <%= flash[:undisplayed_errors] %>
      </div>
    <% end %>
  </div>
<% end %>
